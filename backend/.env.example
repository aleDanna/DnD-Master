# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# PostgreSQL Database Configuration
# Option 1: Individual settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=dnd_master
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_POOL_SIZE=10

# Option 2: Connection URL (overrides individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/dnd_master

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# LLM Provider Configuration
# Options: openai, gemini, claude, mock
LLM_PROVIDER=mock

# LLM API Keys (set the one matching your LLM_PROVIDER)
# OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=...
# ANTHROPIC_API_KEY=sk-ant-...

# Logging
LOG_LEVEL=info
